{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "_axios": ["./node_modules/axios/index"],
      "_@ionic/react": ["./node_modules/@ionic/react/dist/types/index.d.ts"],
      "_react-router-dom": ["./node_modules/@types/react-router-dom/index.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", ".eslintrc.cjs"]
}
